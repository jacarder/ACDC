import NavBar from "../components/NavBar.astro";
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro Basics</title>
  </head>
  <body>
    <NavBar />
    <div class="mx-8 z-1">
      <div class="shadow-md mx-[10%] p-5">
        <slot />
      </div>
    </div>
    <div class="h-screen fixed w-[10%] top-[50px]">
      <FlagSVG />
    </div>
    <div class="h-screen fixed w-[10%] top-[50px] right-0 scale-x-[-1]">
      <FlagSVG />
    </div>
